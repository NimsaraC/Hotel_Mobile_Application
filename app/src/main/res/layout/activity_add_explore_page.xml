<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adminPages.AddExplorePage">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/main_title"
                android:text="LuxeVista"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/btnProfile"
                    android:layout_width="match_parent"
                    android:background="@color/card"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!--Add Image -->

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/txtServiceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:fontFamily="@font/main_title"
                    android:text="Add New Service "
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service Type"
                        android:fontFamily="@font/main"
                        android:textSize="20dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/subtitle"/>

                    <Spinner
                        android:id="@+id/spinnerServiceType"
                        android:layout_width="match_parent"
                        android:background="@drawable/text_filed_spinner"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_height="60dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/text_filed"
                    android:inputType="textMultiLine"
                    android:textColorHint="@color/subtitle"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/main"
                    android:textSize="20sp"
                    android:hint="Description"
                    android:lines="3"
                    android:maxLines="5" />

                <EditText
                    android:id="@+id/edtDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/text_filed"
                    android:inputType="text"
                    android:textColorHint="@color/subtitle"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/main"
                    android:textSize="20sp"
                    android:hint="Duration" />

                <EditText
                    android:id="@+id/edtRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/text_filed"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/subtitle"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/main"
                    android:textSize="20sp"
                    android:hint="Price per person" />

                <EditText
                    android:id="@+id/edtBooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/text_filed"
                    android:inputType="textMultiLine"
                    android:textColorHint="@color/subtitle"
                    android:textColor="@color/white"
                    android:lines="3"
                    android:maxLines="5"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/main"
                    android:textSize="20sp"
                    android:hint="Booking Instructions" />

                <EditText
                    android:id="@+id/edtNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/text_filed"
                    android:inputType="textMultiLine"
                    android:textColorHint="@color/subtitle"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:lines="2"
                    android:maxLines="5"
                    android:fontFamily="@font/main"
                    android:textSize="20sp"
                    android:hint="Special Notes" />

                <TextView
                    android:id="@+id/btnAddCoverImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Add Cover Image"
                    android:textColor="@color/Button"
                    android:textSize="20dp"
                    android:fontFamily="@font/main"
                    android:background="@drawable/text_filed"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardElevation="2dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/card"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/ivCoverImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/btnAddImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Add Room Images"
                    android:textColor="@color/Button"
                    android:textSize="20dp"
                    android:fontFamily="@font/main"
                    android:background="@drawable/text_filed"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:clipToPadding="false" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardElevation="15dp">

                    <LinearLayout
                        android:id="@+id/btnAdd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/Button"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sign up"
                            android:textAlignment="center"
                            android:textColor="@color/background"
                            android:textSize="25dp"
                            android:fontFamily="@font/title"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>